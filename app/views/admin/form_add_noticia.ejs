<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<meta charset="utf-8" />
		<title>Formulario de cadastro de Noticia</title>
	</head>
	<body>

		<h1>Adicionar noticia</h1>
		<br/>

		
		<% if ( validacao != undefined ) { %>
			<ul>
			   <% for(var i = 0; i < validacao.length; i++) { %>
				    <li>
					   <%= validacao[i].msg %>
				    </li>
			    <% } %>
		    </ul>
	    <% } %>
		
		<form action="/noticias/salvar" method="post">
			<label for="titulo">Título</label>
			<input type="text" id="titulo" name="titulo" value="<%=noticia.titulo %>" placeholder="Titulo da notícia">
			<br/>

			<label for="resumo">Resumo</label>
			<input type="text" id="resumo" name="resumo" value="<%=noticia.resumo %>" placeholder="Resumo da notícia">
			<br/>

			<label for="autor">Autor</label>
			<input type="text" id="autor" name="autor" value="<%=noticia.autor %>" placeholder="Autor">
			<br/>

			<label for="data_noticia">Data dos Fatos</label>
			<input type="date" id="data_noticia" name="data_noticia" value="<%=noticia.data_noticia %>" placeholder="Data dos Fatos">
			<br/>

			<label for="noticia">Notícia</label>
			<textarea name="noticia" id="noticia" rows="5" cols="30" ><%=noticia.noticia %></textarea>
			<br/>

			<input type="submit" value="Enviar">
		</form>

	</body>
</html>